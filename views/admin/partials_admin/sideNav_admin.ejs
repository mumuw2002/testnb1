<head>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

        :root {
            --sidebar: #323450;
            --lighttopnav: #474962;
            --select: #7952b3;
            --lightselect: #e5e4fa;
            --deepbackground: #f7f8f9;
            --line: #f7f8f9;
            --lightline: #e9ebef;
            --lightText: #fffc;
            --btn: #5D5FEF;
            --body-color: #e4e9f7;
            --sidebar-color: #fff;
            --primary-color: #7952b3;
            --primary-color-light: #f6f5f7;
            --toggle-color: #ddd;
            --text-color: #707070;
        }

        body {
            height: 100%;
            font-family: "Kanit", sans-serif;
            margin: 0;
            padding: 0;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .overlay.show {
            opacity: 1;
            visibility: visible;
        }

        /* Sidebar */
        .secside {
            position: fixed;
            height: 100%;
            z-index: 1;
        }

        .sidebar.close {
            width: 90px;
            transition: width 0.4s ease;
        }

        .sidebar {
            position: static;
            height: 100%;
            width: 350px;
            background: var(--sidebar);
            transition: width 0.4s ease;
        }

        .headInfo {
            height: auto;
            position: relative;
            padding: 30px 0 10px 0;
        }

        .sidebar.close .headInfo {
            height: auto;
            position: relative;
        }

        .headInfo .image-text {
            display: flex;
            align-items: center;
            height: 60px;
            padding: 50px 20px;
        }

        .sidebar .image {
            max-width: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .headInfo .image img {
            border-radius: 15px;
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        header .image-text .header-text {
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar .text {
            font-size: 16px;
            font-weight: 500;
            margin-left: 10px;
            color: #fff;
            transition: opacity 0.3s ease;
            white-space: nowrap;
            opacity: 1;
        }

        .header-text .name {
            font-weight: 400;
            font-size: 20px;
            margin-left: 10px;
            color: #fff;
        }

        .sidebar header .toggle {
            position: absolute;
            top: 50%;
            right: -13px;
            transform: translateY(-50%) rotate(180deg);
            height: 25px;
            width: 25px;
            background-color: var(--btn);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            color: var(--lightline);
            font-size: 20px;
            transition: transform 0.4s ease;
        }

        .sidebar.close .toggle {
            transform: translateY(-50%) rotate(0deg);
        }

        .sidebar.close .header-text .name,
        .sidebar.close .menu-link .text {
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.1s ease, visibility 0.3s ease;
        }

        .sidebar .header-text .name,
        .sidebar .menu-link .text {
            opacity: 1;
            visibility: visible;
            transition: opacity 0.8s ease, visibility 0.3s ease;
        }



        .line {
            width: 100%;
            height: 1px;
            background-color: var(--lightline);
            padding: 0;
            margin: 0;
        }

        .menu-bar {
            padding: 10px 10px;
            display: flex;
            flex-direction: column;
        }

        .menu-link {
            margin-bottom: 5px;
            padding: 0;
            width: 100%;
        }

        .menu-link li {
            height: 50px;
            margin-top: 5px;
            list-style: none;
            display: flex;
            align-items: center;
            border-radius: 5px;
        }

        .menu-link li:hover {
            background-color: var(--btn);
        }

        .sidebar li #icon {
            min-width: 40px;
            font-size: 20px;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar.close .nav-links a {
            width: 70px;
        }

        .nav-links a {
            opacity: 1;
            visibility: visible;
            transition: opacity 0.8s ease, visibility 0.3s ease;
            text-decoration: none;
            color: black;
            font-size: 16px;
            font-weight: 400;
            height: 100%;
            margin: 15px 0;
            padding: 0 15px;
            cursor: pointer;
            align-items: center;
            display: flex;
            border-radius: 6px;
            width: 210px;
        }

        .menu-link .nav-links:hover a,
        .menu-link .nav-links:hover .text {
            color: white !important;
            transition: 0.3s;
        }

        .menu-link li.active,
        .menu-link li.active #icon {
            color: white !important;
            background-color: var(--btn);
            transition: 0.3s;
        }
    </style>
</head>
<div id="overlay" class="overlay"></div>
<div class="secside">
    <div class="sidebar close">
        <header class="headInfo">
            <div class="image-text">
                <span class="image">
                    <img src="<%= user.profileImage %>" alt="<%= user.username %>'s Profile Image"
                        onerror="this.onerror=null; this.src='/public/img/profileImage/userDefalt.jpg';" />
                </span>
                <div class="text header-text">
                    <span class="name">
                        สวัสดี <%= user.username %>
                    </span>
                </div>
            </div>
            <div class="arrow-close" id="arrow-btn">
                <i class="bx bx-chevron-right toggle"></i>
            </div>
        </header>
        <div class="line"></div>
        <div class="menu-bar">
            <ul class="menu-link">
                <li class="nav-links menu-item" active>
                    <a href="/adminPage">
                        <i class='bx bxs-dashboard' id="icon"></i>
                        <span class="text navbar-text">แดชบอร์ด</span>
                    </a>
                </li>
                <li class="nav-links menu-item">
                    <a href="/SystemAnnouncements">
                        <svg id="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-megaphone-fill" viewBox="0 0 16 16">
                            <path
                                d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0zm-1 .724c-2.067.95-4.539 1.481-7 1.656v6.237a25 25 0 0 1 1.088.085c2.053.204 4.038.668 5.912 1.56zm-8 7.841V4.934c-.68.027-1.399.043-2.008.053A2.02 2.02 0 0 0 0 7v2c0 1.106.896 1.996 1.994 2.009l.496.008a64 64 0 0 1 1.51.048m1.39 1.081q.428.032.85.078l.253 1.69a1 1 0 0 1-.983 1.187h-.548a1 1 0 0 1-.916-.599l-1.314-2.48a66 66 0 0 1 1.692.064q.491.026.966.06" />
                        </svg>
                        <span class="text navbar-text">ประกาศระบบ</span>
                    </a>
                </li>
                <li class="nav-links menu-item">
                    <a href="/ReportUserProblem">
                        <i id="icon" class='bx bx-info-circle'></i>
                        <span class="text navbar-text">รายงานปัญหา</span>
                    </a>
                </li>
                <li class="nav-links menu-item">
                    <a href="/UserAccountManagement">
                        <svg id="icon" fill="none" height="20" viewBox="0 0 14 14" width="20"
                            xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <clipPath id="a">
                                <path d="m0 0h14v14h-14z" />
                            </clipPath>
                            <g clip-path="url(#a)" stroke="#ffff" stroke-linecap="round" stroke-linejoin="round">
                                <path
                                    d="m5 5.5c1.38071 0 2.5-1.11929 2.5-2.5s-1.11929-2.5-2.5-2.5-2.5 1.11929-2.5 2.5 1.11929 2.5 2.5 2.5z" />
                                <path
                                    d="m4.5 12.5h-4v-.5421c.007961-.7623.208977-1.51.58427-2.17342.3753-.66346.91263-1.22098 1.5618-1.62047.64918-.3995 1.38902-.62792 2.15041-.66397.06788-.00321.13574-.00489.20352-.00504.06778.00015.13565.00183.20353.00504.65023.03078 1.28473.20188 1.86048.5" />
                                <path d="m13.5 8.50003-4.71003 4.70997-2.13.29.3-2.13 4.70003-4.70997z" />
                            </g>
                        </svg> <span class="text navbar-text">การจัดการบัญชีผู้ใช้</span>
                    </a>
                </li>
                <li class="nav-links menu-item">
                    <a href="/SettingAdmin">
                        <i id="icon" class='bx bx-cog'></i>
                        <span class="text navbar-text">การตั้งค่า</span>
                    </a>
                </li>
                <li class="nav-links menu-item">
                    <a href="/logout">
                        <i id="icon" class='bx bx-log-out'></i>
                        <span class="text navbar-text">ออกจากระบบ</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const body = document.querySelector("body");
        const sidebar = body.querySelector(".sidebar");
        const overlay = document.getElementById("overlay");
        const arrowBtn = document.getElementById("arrow-btn"); // ปุ่มเปิด/ปิด Sidebar

        // ฟังก์ชันเปิด/ปิด Sidebar
        const toggleSidebar = () => {
            sidebar.classList.toggle("close");
            overlay.classList.toggle("show", !sidebar.classList.contains("close"));
        };

        // ตั้งค่าการคลิกปุ่ม arrowBtn เพื่อเปิด/ปิด Sidebar
        arrowBtn.addEventListener("click", toggleSidebar);

        // ตั้งค่าการคลิกที่ overlay เพื่อปิด Sidebar
        overlay.addEventListener("click", () => {
            sidebar.classList.add("close");
            overlay.classList.remove("show");
        });

        // ฟังก์ชันเพื่อเพิ่ม class 'active' ให้กับ menu item ที่ตรงกับ path ปัจจุบัน
        const setActiveMenuItem = () => {
            const menuItems = document.querySelectorAll(".menu-item");
            const currentPath = window.location.pathname;

            menuItems.forEach(item => {
                const link = item.querySelector("a");
                const href = link.getAttribute("href");

                item.classList.remove("active"); if (href === currentPath) {
                    item.classList.add("active");
                }

                else if (currentPath.startsWith("/SystemAnnouncements") && href === "/SystemAnnouncements") {
                    item.classList.add("active");
                }
            });
        };

        setActiveMenuItem();

        window.addEventListener('popstate', setActiveMenuItem);
    });
</script>